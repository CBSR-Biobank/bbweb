#POST    /study/cevent/annot/update                                  org.biobank.controllers.study.CeventAnnotTypeController.updateAnnotationTypeSubmit
#GET     /study/cevent/annot/remove/:studyId/:studyName/:annotId     org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationType(studyId, studyName, annotId)
#POST    /study/cevent/annot/remove                                  org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationTypeSubmit
