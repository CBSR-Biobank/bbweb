# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           org.biobank.controllers.Application.index
GET     /about                      org.biobank.controllers.Application.about
GET     /contact                    org.biobank.controllers.Application.contact

# studies
GET     /studies                    org.biobank.controllers.study.StudyController.list
POST    /studies                    org.biobank.controllers.study.StudyController.addStudy
GET     /studies/:id                org.biobank.controllers.study.StudyController.readStudy(id)
PUT     /studies/:id                org.biobank.controllers.study.StudyController.updateStudy(id)

GET     /study                      org.biobank.controllers.study.StudyController.index
GET     /study/summary/:id          org.biobank.controllers.study.StudyController.summary(id)
GET     /study/show/:id             org.biobank.controllers.study.StudyController.showStudy(id)
GET     /study/add                  org.biobank.controllers.study.StudyController.addStudy2
POST    /study/add                  org.biobank.controllers.study.StudyController.addStudySubmit
GET     /study/update/:id           org.biobank.controllers.study.StudyController.updateStudy2(id)
POST    /study/update/:id           org.biobank.controllers.study.StudyController.updateStudySubmit(id)

# study Ajax calls
GET     /study/summary/:studyId/:studyName         org.biobank.controllers.study.StudyController.summaryTab(studyId,studyName)
GET     /study/participants/:studyId/:studyName    org.biobank.controllers.study.StudyController.participantsTab(studyId,studyName)
GET     /study/specimens/:studyId/:studyName       org.biobank.controllers.study.StudyController.specimensTab(studyId, studyName)
GET     /study/cevents/list/:studyId/:studyName    org.biobank.controllers.study.StudyController.ceventsTab(studyId,studyName)
GET     /study/pevents/list/:studyId/:studyName    org.biobank.controllers.study.StudyController.peventsTab(studyId,studyName)

# specimen groups
GET     /study/sg/add/:studyId/:studyName              org.biobank.controllers.study.SpecimenGroupController.addSpecimenGroup(studyId, studyName)
POST    /study/sg/add                         	       org.biobank.controllers.study.SpecimenGroupController.addSpecimenGroupSubmit
GET     /study/sg/update/:studyId/:studyName/:sgId     org.biobank.controllers.study.SpecimenGroupController.updateSpecimenGroup(studyId, studyName, sgId)
POST    /study/sg/update                      	       org.biobank.controllers.study.SpecimenGroupController.updateSpecimenGroupSubmit
GET     /study/sg/remove/:studyId/:studyName/:sgId     org.biobank.controllers.study.SpecimenGroupController.removeSpecimenGroup(studyId, studyName, sgId)
POST    /study/sg/remove                      	       org.biobank.controllers.study.SpecimenGroupController.removeSpecimenGroupSubmit

# collection event types
GET     /study/cetype/add/:studyId/:studyName              org.biobank.controllers.study.CeventTypeController.addCeventType(studyId, studyName)
POST    /study/cetype/add                                  org.biobank.controllers.study.CeventTypeController.addCeventTypeSubmit
GET     /study/cetype/update/:studyId/:studyName/:cetId    org.biobank.controllers.study.CeventTypeController.updateCeventType(studyId, studyName, cetId)
POST    /study/cetype/update                               org.biobank.controllers.study.CeventTypeController.updateCeventTypeSubmit
GET     /study/cetype/remove/:studyId/:studyName/:cetId    org.biobank.controllers.study.CeventTypeController.removeCeventType(studyId, studyName, cetId)
GET     /study/cetype/remove                               org.biobank.controllers.study.CeventTypeController.removeCeventTypeSubmit

# collection event annotation types
GET     /study/cevent/annot/add/:studyId/:studyName                 org.biobank.controllers.study.CeventAnnotTypeController.addAnnotationType(studyId, studyName)
POST    /study/cevent/annot/add                                     org.biobank.controllers.study.CeventAnnotTypeController.addAnnotationTypeSubmit
GET     /study/cevent/annot/update/:studyId/:studyName/:annotId     org.biobank.controllers.study.CeventAnnotTypeController.updateAnnotationType(studyId, studyName, annotId)
POST    /study/cevent/annot/update                                  org.biobank.controllers.study.CeventAnnotTypeController.updateAnnotationTypeSubmit
GET     /study/cevent/annot/remove/:studyId/:studyName/:annotId     org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationType(studyId, studyName, annotId)
POST    /study/cevent/annot/remove                                  org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationTypeSubmit

# participant annotation types
GET     /study/participant/annot/add/:studyId/:studyName                 org.biobank.controllers.study.ParticipantAnnotTypeController.addAnnotationType(studyId, studyName)
POST    /study/participant/annot/add                                     org.biobank.controllers.study.ParticipantAnnotTypeController.addAnnotationTypeSubmit
GET     /study/participant/annot/update/:studyId/:studyName/:annotId     org.biobank.controllers.study.ParticipantAnnotTypeController.updateAnnotationType(studyId, studyName, annotId)
POST    /study/participant/annot/update                                  org.biobank.controllers.study.ParticipantAnnotTypeController.updateAnnotationTypeSubmit
GET     /study/participant/annot/remove/:studyId/:studyName/:annotId     org.biobank.controllers.study.ParticipantAnnotTypeController.removeAnnotationType(studyId, studyName, annotId)
POST    /study/participant/annot/remove                                  org.biobank.controllers.study.ParticipantAnnotTypeController.removeAnnotationTypeSubmit

# specimenlink annotation types
GET     /study/spclink/annot/add/:studyId/:studyName                 org.biobank.controllers.study.SpecimenLinkAnnotTypeController.addAnnotationType(studyId, studyName)
POST    /study/spclink/annot/add                                     org.biobank.controllers.study.SpecimenLinkAnnotTypeController.addAnnotationTypeSubmit
GET     /study/spclink/annot/update/:studyId/:studyName/:annotId     org.biobank.controllers.study.SpecimenLinkAnnotTypeController.updateAnnotationType(studyId, studyName, annotId)
POST    /study/spclink/annot/update                                  org.biobank.controllers.study.SpecimenLinkAnnotTypeController.updateAnnotationTypeSubmit
GET     /study/spclink/annot/remove/:studyId/:studyName/:annotId     org.biobank.controllers.study.SpecimenLinkAnnotTypeController.removeAnnotationType(studyId, studyName, annotId)
POST    /study/spclink/annot/remove                                  org.biobank.controllers.study.SpecimenLinkAnnotTypeController.removeAnnotationTypeSubmit

# user
GET     /user/profile               org.biobank.controllers.UserController.profile

# Login page
GET     /login                      securesocial.controllers.LoginPage.login
GET     /logout                     securesocial.controllers.LoginPage.logout

# User Registration and password handling
GET     /signup                     securesocial.controllers.Registration.startSignUp
POST    /signup                     securesocial.controllers.Registration.handleStartSignUp
GET     /signup/:token              securesocial.controllers.Registration.signUp(token)
POST    /signup/:token              securesocial.controllers.Registration.handleSignUp(token)
GET     /reset                      securesocial.controllers.Registration.startResetPassword
POST    /reset                      securesocial.controllers.Registration.handleStartResetPassword
GET     /reset/:token               securesocial.controllers.Registration.resetPassword(token)
POST    /reset/:token               securesocial.controllers.Registration.handleResetPassword(token)
GET     /password                   securesocial.controllers.PasswordChange.page
POST    /password                   securesocial.controllers.PasswordChange.handlePasswordChange

# Providers entry points
GET     /authenticate/:provider     securesocial.controllers.ProviderController.authenticate(provider, redirectTo:Option[String])
POST    /authenticate/:provider     securesocial.controllers.ProviderController.authenticateByPost(provider, redirectTo:Option[String])
GET     /not-authorized             securesocial.controllers.ProviderController.notAuthorized

GET     /assets/stylesheets/img/glyphicons-halflings-white.png      controllers.Assets.at(path="/public", file="/images/glyphicons-halflings-white.png")
GET     /assets/stylesheets/img/glyphicons-halflings.png            controllers.Assets.at(path="/public", file="/images/glyphicons-halflings.png")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
