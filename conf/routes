# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                              org.biobank.controllers.Application.index
GET     /about                         org.biobank.controllers.Application.about
GET     /contact                       org.biobank.controllers.Application.contact

# studies
GET     /studies                       org.biobank.controllers.study.StudyController.list
POST    /studies                       org.biobank.controllers.study.StudyController.addStudy
POST    /studies/enable                org.biobank.controllers.study.StudyController.enableStudy
POST    /studies/disable               org.biobank.controllers.study.StudyController.disableStudy
POST    /studies/retire                org.biobank.controllers.study.StudyController.retireStudy
POST    /studies/unretire              org.biobank.controllers.study.StudyController.unretireStudy

# specimen groups
GET     /studies/sgroups               org.biobank.controllers.study.SpecimenGroupController.list
POST    /studies/sgroups               org.biobank.controllers.study.SpecimenGroupController.addSpecimenGroup
PUT     /studies/sgroups/:id           org.biobank.controllers.study.SpecimenGroupController.updateSpecimenGroup(id)
DELETE  /studies/sgroups/:id           org.biobank.controllers.study.SpecimenGroupController.removeSpecimenGroup(id)

# collection event types
GET     /studies/cetypes               org.biobank.controllers.study.CeventTypeController.list
POST    /studies/cetypes               org.biobank.controllers.study.CeventTypeController.addCollectionEventType
PUT     /studies/cetypes/:id           org.biobank.controllers.study.CeventTypeController.updateCollectionEventType(id)
DELETE  /studies/cetypes/:id           org.biobank.controllers.study.CeventTypeController.removeCollectionEventType(id)

## collection event annotation types
GET     /studies/ceannottype           org.biobank.controllers.study.CeventAnnotTypeController.list
POST    /studies/ceannottype           org.biobank.controllers.study.CeventAnnotTypeController.addAnnotationType
PUT     /studies/ceannottype/:id       org.biobank.controllers.study.CeventAnnotTypeController.updateAnnotationType(id)
DELETE  /studies/ceannottype/:id       org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationType(id)

# participant annotation types
GET     /studies/pannottype            org.biobank.controllers.study.ParticipantAnnotTypeController.list
POST    /studies/pannottype            org.biobank.controllers.study.ParticipantAnnotTypeController.addAnnotationType
PUT     /studies/pannottype/:id        org.biobank.controllers.study.ParticipantAnnotTypeController.updateAnnotationType(id)
DELETE  /studies/pannottype/:id        org.biobank.controllers.study.ParticipantAnnotTypeController.removeAnnotationType(id)

# specimenlink annotation types
GET     /studies/slannottype           org.biobank.controllers.study.SpecimenLinkAnnotTypeController.list
POST    /studies/slannottype           org.biobank.controllers.study.SpecimenLinkAnnotTypeController.addAnnotationType
PUT     /studies/slannottype/:id       org.biobank.controllers.study.SpecimenLinkAnnotTypeController.updateAnnotationType(id)
DELETE  /studies/slannottype/:id       org.biobank.controllers.study.SpecimenLinkAnnotTypeController.removeAnnotationType(id)

# study
GET     /studies/:id                   org.biobank.controllers.study.StudyController.readStudy(id)
PUT     /studies/:id                   org.biobank.controllers.study.StudyController.updateStudy(id)

# user
GET     /user/profile               org.biobank.controllers.UserController.profile

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
