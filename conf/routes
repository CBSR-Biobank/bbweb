# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           org.biobank.controllers.Application.index
GET     /about                      org.biobank.controllers.Application.about
GET     /contact                    org.biobank.controllers.Application.contact

# studies
GET     /studies                    org.biobank.controllers.study.StudyController.list
POST    /studies                    org.biobank.controllers.study.StudyController.addStudy
POST    /studies/enable             org.biobank.controllers.study.StudyController.enableStudy
POST    /studies/disable            org.biobank.controllers.study.StudyController.disableStudy
POST    /studies/retire             org.biobank.controllers.study.StudyController.retireStudy
POST    /studies/unretire           org.biobank.controllers.study.StudyController.unretireStudy

# specimen groups
GET     /studies/sgroups            org.biobank.controllers.study.SpecimenGroupController.list
POST    /studies/sgroups            org.biobank.controllers.study.SpecimenGroupController.addSpecimenGroup
PUT     /studies/sgroups/:id        org.biobank.controllers.study.SpecimenGroupController.updateSpecimenGroup(id)
DELETE  /studies/sgroups/:id        org.biobank.controllers.study.SpecimenGroupController.removeSpecimenGroup(id)

# collection event types
GET     /studies/cetypes              org.biobank.controllers.study.CeventTypeController.list
POST    /studies/cetypes              org.biobank.controllers.study.CeventTypeController.addCollectionEventType
PUT     /studies/cetypes/:id          org.biobank.controllers.study.CeventTypeController.updateCollectionEventType(id)
DELETE  /studies/cetypes/:id          org.biobank.controllers.study.CeventTypeController.removeCollectionEventType(id)

# study
GET     /studies/:id                org.biobank.controllers.study.StudyController.readStudy(id)
PUT     /studies/:id                org.biobank.controllers.study.StudyController.updateStudy(id)

