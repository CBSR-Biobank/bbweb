# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                              org.biobank.controllers.Application.index

# studies
GET     /admin/studies                       org.biobank.controllers.study.StudyController.list
POST    /admin/studies                       org.biobank.controllers.study.StudyController.add
POST    /admin/studies/enable                org.biobank.controllers.study.StudyController.enable
POST    /admin/studies/disable               org.biobank.controllers.study.StudyController.disable
POST    /admin/studies/retire                org.biobank.controllers.study.StudyController.retire
POST    /admin/studies/unretire              org.biobank.controllers.study.StudyController.unretire

# specimen groups
GET     /admin/studies/sgroups/:studyId      org.biobank.controllers.study.SpecimenGroupController.get(studyId, sgId: Option[String])
POST    /admin/studies/sgroups               org.biobank.controllers.study.SpecimenGroupController.addSpecimenGroup
PUT     /admin/studies/sgroups/:id           org.biobank.controllers.study.SpecimenGroupController.updateSpecimenGroup(id)
DELETE  /admin/studies/sgroups/:id           org.biobank.controllers.study.SpecimenGroupController.removeSpecimenGroup(id)

# collection event types
GET     /admin/studies/cetypes/:studyId      org.biobank.controllers.study.CeventTypeController.get(studyId, cetId: Option[String])
POST    /admin/studies/cetypes               org.biobank.controllers.study.CeventTypeController.addCollectionEventType
PUT     /admin/studies/cetypes/:id           org.biobank.controllers.study.CeventTypeController.updateCollectionEventType(id)
DELETE  /admin/studies/cetypes/:id           org.biobank.controllers.study.CeventTypeController.removeCollectionEventType(id)

## collection event annotation types
GET     /admin/studies/ceannottype/:studyId  org.biobank.controllers.study.CeventAnnotTypeController.get(studyId, annotTypeId: Option[String])
POST    /admin/studies/ceannottype           org.biobank.controllers.study.CeventAnnotTypeController.addAnnotationType
PUT     /admin/studies/ceannottype/:id       org.biobank.controllers.study.CeventAnnotTypeController.updateAnnotationType(id)
DELETE  /admin/studies/ceannottype/:id       org.biobank.controllers.study.CeventAnnotTypeController.removeAnnotationType(id)

# participant annotation types
GET     /admin/studies/pannottype/:studyId   org.biobank.controllers.study.ParticipantAnnotTypeController.get(studyId, annotTypeId: Option[String])
POST    /admin/studies/pannottype            org.biobank.controllers.study.ParticipantAnnotTypeController.addAnnotationType
PUT     /admin/studies/pannottype/:id        org.biobank.controllers.study.ParticipantAnnotTypeController.updateAnnotationType(id)
DELETE  /admin/studies/pannottype/:id        org.biobank.controllers.study.ParticipantAnnotTypeController.removeAnnotationType(id)

# specimenlink annotation types
GET     /admin/studies/slannottype/:studyId  org.biobank.controllers.study.SpecimenLinkAnnotTypeController.get(studyId, annotTypeId: Option[String])
POST    /admin/studies/slannottype           org.biobank.controllers.study.SpecimenLinkAnnotTypeController.addAnnotationType
PUT     /admin/studies/slannottype/:id       org.biobank.controllers.study.SpecimenLinkAnnotTypeController.updateAnnotationType(id)
DELETE  /admin/studies/slannottype/:id       org.biobank.controllers.study.SpecimenLinkAnnotTypeController.removeAnnotationType(id)

# processing types
GET     /admin/studies/proctypes/:studyId    org.biobank.controllers.study.ProcessingTypeController.get(studyId, procTypeId: Option[String])
POST    /admin/studies/proctypes             org.biobank.controllers.study.ProcessingTypeController.addProcessingType
PUT     /admin/studies/proctypes/:id         org.biobank.controllers.study.ProcessingTypeController.updateProcessingType(id)
DELETE  /admin/studies/proctypes/:id         org.biobank.controllers.study.ProcessingTypeController.removeProcessingType(id)

# specimen link types
GET     /admin/studies/sltypes/:procTypeId   org.biobank.controllers.study.SpecimenLinkTypeController.get(procTypeId, slTypeId: Option[String])
POST    /admin/studies/sltypes               org.biobank.controllers.study.SpecimenLinkTypeController.addSpecimenLinkType
PUT     /admin/studies/sltypes/:id           org.biobank.controllers.study.SpecimenLinkTypeController.updateSpecimenLinkType(id)
DELETE  /admin/studies/sltypes/:id           org.biobank.controllers.study.SpecimenLinkTypeController.removeSpecimenLinkType(id)

# value objects
GET     /admin/studies/valuetypes                org.biobank.controllers.study.StudyController.valueTypes
GET     /admin/studies/anatomicalsrctypes        org.biobank.controllers.study.StudyController.anatomicalSourceTypes
GET     /admin/studies/specimentypes             org.biobank.controllers.study.StudyController.specimenTypes
GET     /admin/studies/preservtypes              org.biobank.controllers.study.StudyController.preservTypes
GET     /admin/studies/preservtemptypes          org.biobank.controllers.study.StudyController.preservTempTypes

# study
GET     /admin/studies/:id                   org.biobank.controllers.study.StudyController.query(id)
PUT     /admin/studies/:id                   org.biobank.controllers.study.StudyController.update(id)

# Users
GET     /authuser                      org.biobank.controllers.UserController.authUser
GET     /users                         org.biobank.controllers.UserController.list
GET     /users/:id                     org.biobank.controllers.UserController.user(id: String)
POST    /users                         org.biobank.controllers.UserController.addUser()
PUT     /users/:id                     org.biobank.controllers.UserController.updateUser(id: String)
DELETE  /users/:id                     org.biobank.controllers.UserController.removeUser(id: String)
PUT     /users/activate/:id            org.biobank.controllers.UserController.activateUser(id: String)
PUT     /users/lock/:id                org.biobank.controllers.UserController.lockUser(id: String)
PUT     /users/unlock/:id              org.biobank.controllers.UserController.unlockUser(id: String)

# JavaScript routes object
GET     /jsroutes.js                   org.biobank.controllers.Application.jsRoutes()

# Routes used by Angular
# ~~~~

# Authentication
POST    /login                         org.biobank.controllers.Application.login()
POST    /logout                        org.biobank.controllers.Application.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.versioned(path="/public", file: Asset)
